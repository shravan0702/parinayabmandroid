<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D997E8"
    tools:context=".about.AboutFamily">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rellayout"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            android:layout_marginTop="90dp"
            android:background="@color/divider">

            <TextView
                android:id="@+id/about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Your Family"
                android:layout_marginTop="20dp"

                android:layout_marginLeft="20dp"
                android:textSize="20sp"
                android:textColor="@color/purple"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/fathernametxt"
                android:layout_marginStart="30dp"
                android:textSize="@dimen/_15sdp"
                android:layout_marginTop="60dp"
                android:textColor="@color/black"
                android:text="Father's Name"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/fathernameedtext"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:layout_below="@+id/Registration_form_text"
                android:layout_marginStart="@dimen/_26sdp"
                android:layout_marginTop="85dp"
                android:layout_marginEnd="@dimen/_26sdp"
                android:background="@drawable/cell_border"
                android:hint="Father Name"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="#000000"
                android:textSize="@dimen/_14sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="135dp"
                android:layout_marginStart="@dimen/_26sdp"
                android:layout_marginEnd="@dimen/_26sdp"
                android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="Father's Occupation"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:background="@drawable/cell_border"
                android:padding="@dimen/_2sdp">
                <Spinner
                    android:id="@+id/fatherOccupationSpinner"
                    android:layout_width="match_parent"

                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_26sdp"
                    android:hint="father occupation"
                    android:textColor="@color/black"
                    android:layout_marginEnd="@dimen/_26sdp"
                    style="@style/Widget.AppCompat.Spinner.DropDown"
                    android:scrollbarStyle="insideOverlay"
                    android:scrollbarAlwaysDrawHorizontalTrack="true"
                    android:spinnerMode="dropdown"
                    android:layout_centerInParent="true"
                    android:paddingStart="@dimen/_15sdp"

                    android:textColorHint="#000000"
                    android:textSize="@dimen/_15sdp"
                    />
            </LinearLayout>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:id="@+id/mothernametxt"
                android:layout_marginStart="30dp"
                android:textSize="@dimen/_15sdp"
                android:layout_marginTop="220dp"
                android:textColor="@color/black"
                android:text="Mother's Name"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/mothernameet"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:layout_below="@+id/Registration_form_text"
                android:layout_marginStart="@dimen/_26sdp"
                android:layout_marginTop="245dp"
                android:layout_marginEnd="@dimen/_26sdp"
                android:background="@drawable/cell_border"
                android:hint="Mother Name"
                android:paddingStart="@dimen/_15sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="#000000"
                android:textSize="@dimen/_14sdp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="300dp"
                android:layout_marginStart="@dimen/_26sdp"
                android:layout_marginEnd="@dimen/_26sdp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="Mother's Occupation"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:background="@drawable/cell_border"
                    android:padding="@dimen/_2sdp">
                    <Spinner
                        android:id="@+id/motheroccupationSpinner"
                        android:layout_width="match_parent"

                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_26sdp"

                        android:textColor="@color/black"
                        android:layout_marginEnd="@dimen/_26sdp"
                        style="@style/Widget.AppCompat.Spinner.DropDown"
                        android:scrollbarStyle="insideOverlay"
                        android:scrollbarAlwaysDrawHorizontalTrack="true"
                        android:spinnerMode="dropdown"
                        android:layout_centerInParent="true"
                        android:paddingStart="@dimen/_15sdp"

                        android:textColorHint="#000000"
                        android:textSize="@dimen/_15sdp"
                        />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="390dp"
                android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_26sdp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="Brother"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/cell_border"
                    android:padding="@dimen/_2sdp">
                    <com.skydoves.powerspinner.PowerSpinnerView
                        android:id="@+id/noofbrothersspinner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:hint="select"
                        android:textColor="@color/black"
                        android:layout_marginEnd="@dimen/_26sdp"
                        style="@style/Widget.AppCompat.Spinner.DropDown"
                        android:layout_centerInParent="true"
                        android:paddingStart="@dimen/_15sdp"
                        android:entries="@array/number_array"
                        app:spinner_divider_color="@color/black"
                        app:spinner_item_height="@dimen/_46sdp"
                        app:spinner_popup_max_height="120dp"
                        app:spinner_popup_background="@color/white"
                        app:spinner_selected_item_background="@color/purple"
                        android:textColorHint="#000000"
                        android:textSize="@dimen/_15sdp"
                        />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"

                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="Sister"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/cell_border"
                    android:padding="@dimen/_2sdp">

                    <com.skydoves.powerspinner.PowerSpinnerView
                        android:id="@+id/noofsistersspinner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:textColor="@color/black"
                        style="@style/Widget.AppCompat.Spinner.DropDown"
                        android:hint="select"

                        app:spinner_divider_color="@color/black"
                        app:spinner_item_height="@dimen/_46sdp"
                        app:spinner_popup_max_height="120dp"
                        app:spinner_popup_background="@color/white"
                        app:spinner_selected_item_background="@color/purple"


                        android:spinnerMode="dropdown"

                        android:layout_centerInParent="true"
                        android:entries="@array/number_array"
                        android:paddingStart="@dimen/_15sdp"
                        android:textColorHint="#000000"
                        android:textSize="@dimen/_15sdp"
                        />
                </LinearLayout>
                </LinearLayout>


            </LinearLayout>





            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_backgroundbutton"
                android:text="continue"
                android:id="@+id/continuebtn"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginLeft="110dp"
                android:layout_marginBottom="100dp"
                android:layout_marginTop="500dp"/>



        </androidx.cardview.widget.CardView>

    </RelativeLayout>



</ScrollView>