<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightpink"
    tools:viewBindingIgnore="true"

    tools:context="com.spacedevelopers.parinayabandham.ui.home.Otp_Verification_Activity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/otpscreen"
        android:layout_marginTop="-480dp"
        android:src="@drawable/shape" />

    <ImageView
        android:layout_width="237dp"
        android:layout_height="188dp"
        android:layout_marginLeft="70dp"
        android:id="@+id/logootp"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo"
        />

    <TextView
        android:id="@+id/txt_otp_verification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_420sdp"
        android:fontFamily="@font/coda"
        android:text="OTP VERIFICATION"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="@dimen/_25sdp" />


    <TextView
        android:id="@+id/txt_enter_otp_sent_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_otp_verification"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="@dimen/_100sdp"
        android:singleLine="true"
        android:layout_marginTop="@dimen/_2sdp"
        android:fontFamily="@font/ibarra_real_nova"
        android:text="Enter the OTP Send To "
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp" />

    <TextView
        android:id="@+id/next_to_sendotp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_otp_verification"

        android:layout_marginStart="260dp"
        android:singleLine="true"
        android:layout_marginTop="@dimen/_2sdp"
        android:fontFamily="@font/ibarra_real_nova"
        android:text="7680840372"

        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp" />

    <com.goodiebag.pinview.Pinview
        android:id="@+id/pinview_4_digits"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"
        app:inputType="number"
        app:pinLength="6"
        android:layout_below="@+id/txt_enter_otp_sent_to"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp" />



    <TextView
        android:id="@+id/tv_resend_otp_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pinview_4_digits"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="00:45"
        android:textColor="@color/black"
        android:textSize="@dimen/_24sdp" />


    <TextView
        android:id="@+id/txt_dont_receive_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_resend_otp_timer"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Didn't receive the code ?"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/_89sdp"
        android:textSize="@dimen/_10sdp" />

    <TextView
        android:id="@+id/txt_re_send"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_resend_otp_timer"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_toEndOf="@id/txt_dont_receive_code"

        android:text=" Re-send"
        android:paddingLeft="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_40sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/otpbutton"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Verify OTP"
        android:textColor="@color/white"
        android:layout_below="@+id/txt_re_send"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/rounded_edittext_backgroundbutton" />



</RelativeLayout>