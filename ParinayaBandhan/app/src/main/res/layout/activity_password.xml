<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightpink">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/shape"
        android:layout_marginTop="-420dp"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:id="@+id/logopswd"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SET PASSWORD"
        android:layout_marginLeft="55dp"
        android:layout_below="@+id/logopswd"
        android:layout_marginTop="150dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textStyle="bold|normal"/>

    <EditText
        android:id="@+id/enterpassword"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:layout_below="@id/password"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/rounded_edittext_background"
        android:hint="Enter password"
        android:inputType="text"
        android:paddingLeft="70dp"
        android:paddingEnd="10dp"/>
    <ImageView
        android:id="@+id/reg_password_show"
        android:layout_width="20dp"

        android:layout_height="100dp"
        android:layout_below="@+id/password"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="75dp"
        android:src="@drawable/eyeicon" />


    <EditText
        android:id="@+id/confirmpassword"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"

        android:layout_marginTop="10dp"
        android:paddingRight="@dimen/_10sdp"
        android:layout_below="@id/enterpassword"
        android:background="@drawable/rounded_edittext_background"
        android:hint="Confirm Password"

        android:inputType="textPassword"
        android:paddingLeft="40dp"
        android:textColor="@color/black" />
    <ImageView
        android:id="@+id/reg_password_hide"
        android:layout_width="20dp"
        android:layout_height="100dp"
        android:layout_below="@+id/enterpassword"
        android:layout_alignParentEnd="true"
       android:layout_marginTop="-17dp"
        android:layout_marginEnd="75dp"
        android:src="@drawable/hideeye" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/pswdbutton"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Continue"
        android:textColor="@color/white"
        android:layout_below="@+id/confirmpassword"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/rounded_edittext_backgroundbutton" />


</RelativeLayout>