            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:layout_marginStart="@dimen/_26sdp"
                android:layout_marginEnd="@dimen/_26sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="This Profile is for"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:background="@drawable/cell_border"
                    android:padding="@dimen/_2sdp">
                    <Spinner
                        android:id="@+id/profilefor"
                        android:layout_width="match_parent"

                        android:layout_height="@dimen/_40sdp"
                        android:layout_marginStart="@dimen/_26sdp"
                        android:hint="This Profile is for"
                        android:textColor="@color/black"
                        android:layout_marginEnd="@dimen/_26sdp"
                        style="@style/Widget.AppCompat.Spinner.DropDown"
                        android:scrollbarStyle="insideOverlay"
                        android:scrollbarAlwaysDrawHorizontalTrack="true"
                        android:spinnerMode="dropdown"
                        android:layout_centerInParent="true"
                        android:paddingStart="@dimen/_15sdp"

                        android:textColorHint="#000000"
                        android:textSize="@dimen/_15sdp"
                        />
                </LinearLayout>
                </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="290dp"
                android:layout_marginStart="@dimen/_26sdp"
                android:layout_marginEnd="@dimen/_26sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="Gender"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:background="@drawable/cell_border"
                    android:padding="@dimen/_2sdp">
                    <Spinner
                        android:id="@+id/genderspinner"
                        android:layout_width="match_parent"

                        android:layout_height="@dimen/_38sdp"
                        android:layout_below="@+id/profilefor"
                        android:layout_marginStart="@dimen/_26sdp"

                        android:layout_marginEnd="@dimen/_26sdp"
                        android:gravity="center_vertical"
                        android:hint="Gender  "

                        android:paddingStart="@dimen/_15sdp"
                        android:textColorHint="#000000"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp"
                        app:spinner_arrow_show="true"
                        app:spinner_arrow_tint="@color/black"
                        app:spinner_divider_color="@color/black"
                        app:spinner_item_height="46dp"
                        app:spinner_popup_max_height="@dimen/_120sdp" />
                </LinearLayout>
            </LinearLayout>




            <TextView
                android:layout_width="match_parent"
                android:id="@+id/fullname"
                android:layout_marginTop="380dp"
                android:layout_marginStart="30dp"
                android:text="Full Name"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/edittext_full_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:layout_below="@+id/Registration_form_text"
                android:layout_marginStart="@dimen/_26sdp"
                android:layout_marginTop="410dp"
                android:layout_marginEnd="@dimen/_26sdp"
                android:background="@drawable/cell_border"
                android:hint="Full Name"
                android:paddingStart="@dimen/_15sdp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:paddingEnd="@dimen/_5sdp"
                android:textColorHint="#000000"
                android:textSize="@dimen/_14sdp" />


            <TextView
                android:layout_width="match_parent"
                android:id="@+id/dobtxt"
                android:layout_marginTop="470dp"
                android:layout_marginStart="30dp"
                android:text="Date Of Birth"
                android:layout_height="wrap_content" />




            <EditText
                android:id="@+id/dob"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_38sdp"
                android:layout_below="@+id/edittext_full_name"
                android:layout_marginStart="@dimen/_26sdp"
                android:layout_marginTop="500dp"
                android:layout_marginEnd="@dimen/_26sdp"
                android:background="@drawable/cell_border"
                android:hint=" YYYY-MM-DD"
                android:paddingStart="@dimen/_15sdp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:paddingEnd="@dimen/_5sdp"
                android:textColorHint="#000000"
                android:textSize="@dimen/_14sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
              android:layout_marginTop="560dp"
                android:layout_marginStart="@dimen/_26sdp"
                android:layout_marginEnd="@dimen/_26sdp"
                android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="Religion"
                android:textColor="@color/black"
                android:textSize="@dimen/_15sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/cell_border"
                android:padding="@dimen/_2sdp">
                <Spinner
                    android:id="@+id/religionSpinner"
                    android:layout_width="match_parent"

                    android:layout_height="@dimen/_38sdp"
                    android:layout_below="@+id/dob"
                    android:layout_marginStart="@dimen/_26sdp"

                    android:layout_marginEnd="@dimen/_26sdp"
                    app:spinner_arrow_show="true"
                    app:spinner_arrow_tint="@color/black"
                    app:spinner_divider_color="@color/black"
                    app:spinner_item_height="46dp"
                    app:spinner_popup_max_height="@dimen/_120sdp"
                    android:hint="Religion  "
                    android:textColor="@color/black"
                    android:paddingStart="@dimen/_15sdp"
                    android:textColorHint="#000000"
                    android:textSize="@dimen/_14sdp"
                    />
            </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="650dp"
                android:layout_marginStart="@dimen/_26sdp"
                android:layout_marginEnd="@dimen/_26sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:text="community"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/cell_border"
                    android:padding="@dimen/_2sdp">
                    <Spinner
                        android:id="@+id/CommunitySpinner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_38sdp"
                        android:layout_below="@+id/dob"
                        android:layout_marginStart="@dimen/_26sdp"
                        android:layout_marginEnd="@dimen/_26sdp"
                        android:gravity="center_vertical"
                        android:hint="Community "
                        android:textColorHint="#000000"
                        android:paddingStart="@dimen/_15sdp"
                        android:textColor="@color/black"
                        app:spinner_arrow_show="true"
                        app:spinner_arrow_tint="@color/black"
                        app:spinner_divider_color="@color/black"
                        android:paddingBottom="@dimen/_5sdp"
                        app:spinner_item_height="46dp"
                        app:spinner_popup_max_height="@dimen/_120sdp"
                        android:textSize="@dimen/_15sdp"
                        android:spinnerMode="dropdown"

                        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                        />
                </LinearLayout>
            </LinearLayout>



            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_edittext_backgroundbutton"
                android:text="Next"
                android:id="@+id/nextbtn"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginLeft="110dp"
                android:layout_marginBottom="@dimen/_50sdp"
                android:layout_marginTop="760dp"/>




        </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
</LinearLayout>
</layout>