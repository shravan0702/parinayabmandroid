<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/white"/>
                    <stroke
                        android:width="1dp"
                        android:color="#131313"/>
